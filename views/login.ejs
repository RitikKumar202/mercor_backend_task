<style>
    .container {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Trebuchet MS', sans-serif;
    }

    .main {
        background-color: #ccc;
        padding: 20px 40px;
        border-radius: 8px;
    }

    h1 {
        text-align: center;
        color: #1b1be0;
    }

    input {
        outline: none;
        border: 1px solid #1b1be0;
        background: transparent;
        color: #1b1be0;
        padding: 6px 10px;
    }

    input::placeholder {
        color: #6464f1;
    }

    .btn {
        cursor: pointer;
        background: #1b1be0;
        color: #fff;
    }

    .btn:hover {
        background: transparent;
        color: #1b1be0;
    }
</style>


<div class="container">
    <div class="main">
        <h1>Login</h1>

        <% if(typeof message !=='undefined' ){%>
            <h4 style="color:red; ">
                <%= message %>
            </h4>

            <% }%>

                <form action="" method="POST">


                    <input type="email" name="email" placeholder="Enter Email" required>
                    <br><br>

                    <input type="password" name="password" placeholder="Enter Password" required>
                    <br><br>
                    <input class="btn" type="submit" value="Login">
                </form>

                <p>New user? <span><a href="/register">Register Here!</a></span></p>
    </div>
</div>